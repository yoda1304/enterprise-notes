  <div class="row">
    <div class="col s7">
      <h4>Search:</h4>
    </div>
    <div class="col s5">

          <%= form_with url: search_path, method: :get, class: "form-inline", id: "search", local: true do %>
              <%= text_field_tag 'query', '', placeholder: "Search ..." %>
              <!-- submitting via js (press enter) so not using... -->
              <% submit_tag('Find') %>

              <% yield %>
          <% end %>
    </div>
  </div>
  <br>
  <h2>See the notes other students are sharing:</h2>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note) %></td>
        <td><% hidden = note.content.slice(0, 40) + "... Click for more" %>
            <%=link_to hidden, note_path(note)%></td>
        <td><%= link_to note.user.proper_name, user_path(note.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  